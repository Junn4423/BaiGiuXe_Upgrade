# NPM configuration for Electron builds
target_platform=win32
target_arch=x64
disturl=https://electronjs.org/headers
cache=.npm
runtime=electron
# Allow prebuilt binaries for node-hid
rebuild=false
build_from_source=false
# Force download prebuilt when available
prefer_prebuilt=true
# Use legacy peer deps for compatibility
legacy-peer-deps=true
