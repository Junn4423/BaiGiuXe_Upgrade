{
  "name": "parking-lot-management",
  "version": "1.0.0",
  "description": "Parking Lot Management System - Hệ thống quản lý bãi đỗ xe",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build-frontend": "cd ../frontend && npm run build",
    "prebuild": "npm run build-frontend",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build-frontend && electron-builder"
  },
  "keywords": ["parking", "management", "electron", "car", "parking-lot"],
  "author": "Parking Lot Management Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "ffmpeg-static": "^5.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12",
    "style-loader": "^4.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.parkinglot.management",
    "productName": "Parking Lot Management",
    "copyright": "Copyright © 2025 Parking Lot Management Team",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "rtsp-streaming-server.js",
      "package.json",
      {
        "from": "../frontend/build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Office",
      "synopsis": "Parking Lot Management System"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Parking Lot Management"
    },
    "publish": null
  }
}
